# API Gateway 服务配置示例
# 复制此文件为 services.yaml 并根据实际环境修改

services:
  # 新闻分析服务示例
  news_analysis:
    url: http://news-analysis-service:8030
    enabled: true
    health_path: /health
    routes:
      - path: /api/news-analysis    # 网关对外暴露的路径
        method: POST                 # HTTP 方法
        backend_path: /api/analyze   # 后端服务实际路径（可选，默认等于 path）

  # A股新股信息服务示例
  a_stock:
    url: http://a-stock-service:8001
    enabled: true
    health_path: /health
    routes:
      - path: /api/a-stock
        method: GET
        backend_path: /api/stocks

  # 港股新股信息服务示例
  hk_stock:
    url: http://hk-stock-service:8002
    enabled: true
    health_path: /health
    routes:
      - path: /api/hk-stock
        method: GET
        backend_path: /api/stocks

